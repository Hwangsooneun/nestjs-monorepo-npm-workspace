{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nestjs-mono/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nestjs-mono/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nestjs-mono",
  "projects": {
    "nestjs-mono": {
      "type": "application",
      "root": "apps/nestjs-mono",
      "entryFile": "main",
      "sourceRoot": "apps/nestjs-mono/src",
      "compilerOptions": {
        "tsConfigPath": "apps/nestjs-mono/tsconfig.app.json"
      }
    },
    "api1": {
      "type": "application",
      "root": "apps/api1",
      "entryFile": "main",
      "sourceRoot": "apps/api1/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api1/tsconfig.app.json"
      }
    },
    "api2": {
      "type": "application",
      "root": "apps/api2",
      "entryFile": "main",
      "sourceRoot": "apps/api2/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api2/tsconfig.app.json"
      }
    },
    "parameter-store": {
      "type": "library",
      "root": "libs/parameter-store",
      "entryFile": "index",
      "sourceRoot": "libs/parameter-store/src",
      "compilerOptions": {
        "tsConfigPath": "libs/parameter-store/tsconfig.lib.json"
      }
    },
    "ob-mailer": {
      "type": "library",
      "root": "libs/ob-mailer",
      "entryFile": "index",
      "sourceRoot": "libs/ob-mailer/src",
      "compilerOptions": {
        "tsConfigPath": "libs/ob-mailer/tsconfig.lib.json"
      }
    }
  }
}